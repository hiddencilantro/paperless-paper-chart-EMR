<% if logged_in_as_provider %>
    <% content_for :return do %>
        <%= link_to "Patient Index", provider_patients_path(current_user) %> >> <%= link_to "Patient File", @patient %> >> <%= link_to_unless_current "Edit Patient File", action: "edit" %>
    <% end %>
    <%= render 'form', path: @patient, title: "Edit Patient File" %>
<% elsif logged_in_as_patient %>
    <%= render 'form', path: @patient, title: "Edit Profile" %>
<% else %>
    <%= render 'form', path: @patient, title: "Create A New Patient Account" %>
<% end %>