<% content_for :breadcrumbs do %>
    <%= link_to "Patient Main", provider_patients_path(current_user) %> >> <%= link_to "Patient Directory", directory_patients_path %> >> <%= link_to "Patient File", @patient %> >> <%= link_to_unless_current "Encounters", action: "index" %>
<% end %>

<h2>Encounters (<%= full_name(@patient) %>)</h2>

<%= render 'form', path: patient_encounters_path(@patient)%>

<ul>
    <% @encounters.each do |encounter| %>
        <li><%= encounter.created_at.to_date %> [<%= encounter.encounter_type %>]</li>
    <% end %>
</ul>